{
    "name": "ts-linted-template",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "https://github.com/clugg/ts-linted-template",
    "author": "clug",
    "license": "MIT",
    "private": true,
    "scripts": {
        "lint": "eslint . --ext .ts",
        "lint-and-fix": "eslint . --fix --ext .ts",
        "watch": "tsc -w",
        "build": "yarn run lint-and-fix && tsc",
        "start": "node dist/index.js"
    },
    "devDependencies": {
        "@types/node": "*",
        "@typescript-eslint/eslint-plugin": "^4.21",
        "@typescript-eslint/parser": "^4.21",
        "eslint": "^7.23",
        "eslint-config-prettier": "^8.1",
        "eslint-plugin-prettier": "^3.3",
        "prettier": "^2.2",
        "typescript": "^4.2"
    }
}
